{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "server/src",
    "outDir": "./build/",
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
